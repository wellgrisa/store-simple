{
  "name": "storesimple",
  "version": "0.9.0",
  "author": "Wellington Grisa <wellington.grisa@gmail.com>",
  "description": "This is the first version of a simple storage app.",
  "main": "main.js",
  "browser": {
    "vertx": false
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "build",
    "start": "babel-node cross.js run",
    "electron": "electron main.js",
    "win": "set NODE_ENV=development&&npm run electron",
    "production": "set NODE_ENV=production&&npm run electron",
    "lin": "NODE_ENV=development npm run electron",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-webpack": "webpack src/index.js --config webpack.config.js",
    "watch": "./node_modules/.bin/webpack-dev-server --hot --inline --port 8080",
    "dev": "webpack-dev-server --progress --colors --hot --inline --port 8080",
    
    "clean:win": "rm -rf ./dist/win",
    "dist-old": "./node_modules/.bin/build \"dist/win/src-win32-ia32\" --platform=win",
    "dist:win": "build --win --x64",
    "build:win": "npm run pack:win && ./node_modules/.bin/build \"dist/win/src-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json",
    "pack:win": "npm run clean:win && electron-packager . \"src\" --out=dist/win --platform=win32 --arch=ia32 --icon=assets/win/icon.png --ignore=dist --ignore=assets --ignore=builder.json --ignore=README.md --ignore=.gitignore --asar=true"
  },
  "build": {
    "appId": "Testing"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "css-loader": "^0.23.1",
    "devtron": "^1.2.1",
    "electron-builder": "^5.7.0",
    "electron-packager": "^6.0.2",
    "electron-prebuilt": "^0.37.2",    
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "history": "^1.17.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.13.1",
    "node-sass": "^3.4.2",
    "react-hot-loader": "^1.3.0",
    "redux": "^3.0.5",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "ts-loader": "^0.8.2",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.11",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "any-promise": "^1.3.0",
    "babel": "^5.8.23",
    "babel-core": "^5.8.38",
    "babel-polyfill": "^6.9.1",
    "bootstrap": "^3.3.6",
    "bootstrap-sass": "^3.3.6",
    "classnames": "^2.2.5",
    "electron-prebuilt": "^0.37.8",
    "electron-squirrel-startup": "^1.0.0",
    "es6-promise": "^3.2.1",
    "flexboxgrid": "^6.3.0",
    "intl": "^1.1.0",
    "intl-locales-supported": "^1.0.0",
    "lodash": "^4.13.1",
    "material-design-icons": "^2.2.3",
    "material-ui": "^0.15.1",
    "moment": "^2.11.1",
    "native-promise-only": "^0.8.1",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-flexbox-grid": "^0.9.6",
    "react-maskedinput": "^3.1.2",
    "react-materialize": "^0.14.2",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.1",
    "react-tap-event-plugin": "^1.0.0",
    "redux-form": "^5.2.5",
    "redux-thunk": "^2.0.1",
    "rsvp": "^3.2.1",
    "vow": "^0.4.12",
    "when": "^3.7.7"
  }
}
